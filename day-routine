        // Helper for Lucide icons in CDN version
        const Icon = ({ name, color, size = 24, className = "" }) => {
            const [iconSvg, setIconSvg] = React.useState("");
            React.useEffect(() => {
                if (window.lucide) {
                    const icon = window.lucide.icons[name];
                    if (icon) setIconSvg(icon.toSvg({ color, size, class: className }));
                }
            }, [name, color, size, className]);
            return <span dangerouslySetInnerHTML={{ __html: iconSvg }} />;
        };

        // --- הוסף כאן את כל הלוגיקה של App שכתבנו קודם ---
